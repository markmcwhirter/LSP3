<body>
    <div class="wrapper" style="grid-template-rows:none">
        <header class="page-header" style="height: 1px">

        </header>
        <main class="page-main">
            <div class='page-content'>
                <div id='col1' class='col'>
                    <div id='content'>
                        <div id="contentInner">

                            <nav class="nav flex-column">
                                <li class="nav-item"><a class="nav-link sitelink" href="http://www.lightswitchpress.com" aria-current="page">LSP Home</a></li>
                                <li class="nav-item"><a class="nav-link sitelink active" href="Index">Author Information</a></li>
                                <li class="nav-item"><a class="nav-link sitelink" href="Search">Author Search</a></li>
                                <li class="nav-item"><a class="nav-link sitelink" href="Account/Register">New Author</a></li>
                                <li class="nav-item"><a class="nav-link sitelink" href="BookSearch">Book Search</a></li>
                                <li class="nav-item"><a class="nav-link sitelink" href="Book">Add Book</a></li>
                                <li class="nav-item"><a class="nav-link sitelink" href="BulkSalesEntry">Bulk Sales Entry</a></li>
                                <li class="nav-item"><a class="nav-link sitelink" href="BookSales">Book Sales Browse</a></li>
                                <li class="nav-item"><a class="nav-link sitelink" href="Account/Logout">Logout</a></li>
                            </nav>
                        </div>
                    </div>
                </div>
                <div id='col2' class='col' style="height: 100%; width: 100%">
                    @RenderBody()
                </div>
            </div>

        </main>

        <footer class="page-footer">            
            &copy; @DateTime.Now.Year Light Switch Press.  All rights reserved.
        </footer>

    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
 
    @RenderSection("Scripts", required: false)

 
</body>
</html>