<script type="text/javascript">
    function CancelEventHandler(event) {
        event.preventDefault();
        window.location.href = "Search";
        return false;

    }

    async function UpdateAuthorEventHandler(event) {
        event.preventDefault();

        if (!Validate('FirstName', 'Please supply your first name')) return false;
        if (!Validate('LastName', 'Please supply your last name')) return false;
        if (!Validate('UserName', 'Please supply your username')) return false;
        if (!Validate('Password', 'Please supply a password')) return false;
        if (!Validate('Email', 'Please supply your email')) return false;

        var f = document.getElementById("authorform");
        var formData = new FormData(f);
        var jsonFormData = formDataToJson(formData);

        //const response = await fetch("http://64.23.161.76:2173/api/author/update", {

        const response = await fetch("http://localhost:5253/api/author/update", {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: jsonFormData

        });


        alert('Author has been updated');
        window.location.href = "Search";
        return false;
    }

    function Validate(field, message) {
        var testvalue = document.getElementById(field).value;

        if (testvalue == null || testvalue == '') {
            // alert(message);
            document.getElementById('lblError').innerHTML = message;
            return false;
        }
        return true;
    }
    function formDataToJson(formData) {
        const obj = {};
        formData.forEach((value, key) => {
            // If the key already exists, convert the value to an array
            if (obj.hasOwnProperty(key)) {
                // If the existing value is not an array, convert it to an array
                if (!Array.isArray(obj[key])) {
                    obj[key] = [obj[key]];
                }
                // Push the new value into the array
                obj[key].push(value);
            } else {
                // Otherwise, just set the value
                obj[key] = value;
            }
        });

        return JSON.stringify(obj); // Convert the object to a JSON string
    }
</script>

